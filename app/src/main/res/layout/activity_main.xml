<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ext01d1840.bardak.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BARDAK(200 ML)"
        android:id="@+id/btnBardak"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="144dp"
        android:onClick="BardakOnclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ŞİŞE (500 ML)"
        android:id="@+id/btnSise"
        android:layout_alignTop="@+id/btnBardak"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:onClick="SiseOnclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su arşivi"
        android:id="@+id/btnArsiv"
        android:layout_below="@+id/btnBardak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:onClick="ArsivOnClick" />
</RelativeLayout>
